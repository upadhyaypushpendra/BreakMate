{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"]
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist"]
}
